<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ForceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- toolbar-->
    <style name="toolbarBackground">
        <item name="android:background">@color/temna_main</item>
    </style>
    <style name="toolbarText">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Startup page-->
    <style name="logging_tittle">
        <item name="android:textColor">@color/temna_modra</item>
    </style>
    <style name="logging_background">
        <item name="android:background">@color/temna_main</item>
    </style>
    <style name="logging_button">
        <item name="android:backgroundTint">@color/temna_main</item>
        <item name="android:textColor">@color/temna_modra</item>
    </style>
    <style name="logging_option">
        <item name="android:textColor">@color/temna_modra</item>
    </style>
    <style name="logging_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/temna_main</item>>
    </style>
    <style name="inputsBackground">
        <item name="android:backgroundTint">@color/temna_modra</item>
    </style>
    <style name="intro" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/intro_card</item>
    </style>
    <style name="intro_card" parent="">
        <item name="backgroundColor">@color/black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">240dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="startup_card_color">
        <item name="android:background">@color/white</item>
    </style>
    <style name="show_btn">
        <item name="android:background">@color/temna_main</item>
        <item name="android:textColor">@color/temna_modra</item>
    </style>
    <style name="Settings_icons" parent="Preference.SwitchPreferenceCompat">
        <item name="android:tint">@color/temna_modra</item>
    </style>
</resources>
